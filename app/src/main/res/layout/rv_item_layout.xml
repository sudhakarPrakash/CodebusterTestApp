<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:padding="10dp"
    android:backgroundTint="@color/colorGrey"
    android:background="@drawable/rounded_corner"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_hospital"
        android:layout_width="150dp"
        android:layout_height="175dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="5dp"
        android:scaleType="fitXY"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/hospitalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/iv_hospital"
        android:layout_toStartOf="@+id/rating"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/hospitalDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hospitalName"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/iv_hospital"
        android:textSize="15sp"
        android:drawableStart="@drawable/ic_location_on_black_24dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/hospitalAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hospitalDescription"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/iv_hospital"
        android:textSize="15sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.6"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:padding="4dp"
        android:gravity="center"
        android:background="@color/colorDarkBlue"
        android:drawableEnd="@drawable/ic_star_yellow_20dp"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>

